{"data":[{"book":"Izililo","chapter":"3","verse":"1","text":"Yimi umuntu olubonileyo usizi"},{"book":"Izililo","chapter":"3","verse":"2","text":"Ungixotshile, wangiphumputhekisa"},{"book":"Izililo","chapter":"3","verse":"3","text":"ngempela usengiphakamisele isandla sakhe,"},{"book":"Izililo","chapter":"3","verse":"4","text":"Usenze ijwabu lami laluphala,"},{"book":"Izililo","chapter":"3","verse":"5","text":"Ungihanqile wangihonqolozela"},{"book":"Izililo","chapter":"3","verse":"6","text":"Ungenze ngahlala emnyameni"},{"book":"Izililo","chapter":"3","verse":"7","text":"Ungihonqolozele ngenqaba ukuze ngingaphunyuki;"},{"book":"Izililo","chapter":"3","verse":"8","text":"Kuthi lanxa ngimemeza loba ngidinga usizo,"},{"book":"Izililo","chapter":"3","verse":"9","text":"Uvale indlela yami ngamatshe;"},{"book":"Izililo","chapter":"3","verse":"10","text":"Njengebhele licathamile,"},{"book":"Izililo","chapter":"3","verse":"11","text":"wangihudulela eceleni kwendlela, wangifohloza,"},{"book":"Izililo","chapter":"3","verse":"12","text":"Wadonsa idandili lakhe,"},{"book":"Izililo","chapter":"3","verse":"13","text":"Wangiciba enhliziyweni"},{"book":"Izililo","chapter":"3","verse":"14","text":"Ngaba yinhlekisa ebantwini bakithi bonke;"},{"book":"Izililo","chapter":"3","verse":"15","text":"Ungigqibe ngemithi ebabayo,"},{"book":"Izililo","chapter":"3","verse":"16","text":"Ungihlafunise ukhethe ngamazinyo;"},{"book":"Izililo","chapter":"3","verse":"17","text":"Ngincitshiwe ukuthula;"},{"book":"Izililo","chapter":"3","verse":"18","text":"Ngakho ngithi, “Sebuphelile ubucwazicwazi bami,"},{"book":"Izililo","chapter":"3","verse":"19","text":"Ngikhumbula ukuhlupheka lokuntula kwami,"},{"book":"Izililo","chapter":"3","verse":"20","text":"Konke ngikukhumbula kamhlophe,"},{"book":"Izililo","chapter":"3","verse":"21","text":"Kodwa ngikhumbula lokhu"},{"book":"Izililo","chapter":"3","verse":"22","text":"Ngenxa yothando olukhulu lukaThixo kasibhujiswanga,"},{"book":"Izililo","chapter":"3","verse":"23","text":"Siba sitsha ukusa kwamalanga;"},{"book":"Izililo","chapter":"3","verse":"24","text":"Ngiyazitshela ngithi, “UThixo uyisabelo sami;"},{"book":"Izililo","chapter":"3","verse":"25","text":"UThixo ulungile kulowo omethembayo,"},{"book":"Izililo","chapter":"3","verse":"26","text":"kuhle ukulinda ngokuthula,"},{"book":"Izililo","chapter":"3","verse":"27","text":"Kuhle ukuthi umuntu alithwale ijogwe"},{"book":"Izililo","chapter":"3","verse":"28","text":"Kahlale yedwa ngokuthula,"},{"book":"Izililo","chapter":"3","verse":"29","text":"Kembele ubuso bakhe ethulini,"},{"book":"Izililo","chapter":"3","verse":"30","text":"Kaphe isihlathi sakhe kulowo ofuna ukumhlankala,"},{"book":"Izililo","chapter":"3","verse":"31","text":"Ngoba uThixo kabalahli abantu"},{"book":"Izililo","chapter":"3","verse":"32","text":"Loba engaletha ubuhlungu, uzatshengisa uzwelo,"},{"book":"Izililo","chapter":"3","verse":"33","text":"Ngoba kehliseli ukuhlupheka"},{"book":"Izililo","chapter":"3","verse":"34","text":"Ukuhlifiza ngezinyawo"},{"book":"Izililo","chapter":"3","verse":"35","text":"ukuncitsha umuntu amalungelo akhe"},{"book":"Izililo","chapter":"3","verse":"36","text":"ukungahluleli kuhle,"},{"book":"Izililo","chapter":"3","verse":"37","text":"Ngubani ongatsho ulutho lwenzakale"},{"book":"Izililo","chapter":"3","verse":"38","text":"Akuveli emlonyeni woPhezukonke"},{"book":"Izililo","chapter":"3","verse":"39","text":"Pho kungani umuntu ophilayo esola"},{"book":"Izililo","chapter":"3","verse":"40","text":"Kasilingeni njalo sihlole izindlela zethu,"},{"book":"Izililo","chapter":"3","verse":"41","text":"Asiphakamiseleni inhliziyo lezandla zethu"},{"book":"Izililo","chapter":"3","verse":"42","text":"“Sonile sahlamuka,"},{"book":"Izililo","chapter":"3","verse":"43","text":"Uzigubuzele ngolaka waxhumana lathi;"},{"book":"Izililo","chapter":"3","verse":"44","text":"Uzisibekele ngeyezi"},{"book":"Izililo","chapter":"3","verse":"45","text":"Usenze saba ngamanyala lengcekeza"},{"book":"Izililo","chapter":"3","verse":"46","text":"Izitha zethu zonke zivule imilomo yazo"},{"book":"Izililo","chapter":"3","verse":"47","text":"Sesihlukuluzwe yikuthuthumela lokukhilikithela,"},{"book":"Izililo","chapter":"3","verse":"48","text":"Imifula yezinyembezi iyajuluka emehlweni ami"},{"book":"Izililo","chapter":"3","verse":"49","text":"Amehlo ami azajuluka kokuphela,"},{"book":"Izililo","chapter":"3","verse":"50","text":"UThixo aze akhangele phansi"},{"book":"Izililo","chapter":"3","verse":"51","text":"Engikubonayo kuthelela usizi emphefumulweni wami"},{"book":"Izililo","chapter":"3","verse":"52","text":"Labo ababa yizitha zami kungelasizatho,"},{"book":"Izililo","chapter":"3","verse":"53","text":"Bazama ukuquma impilo yami emgodini"},{"book":"Izililo","chapter":"3","verse":"54","text":"amanzi asibekela ikhanda lami,"},{"book":"Izililo","chapter":"3","verse":"55","text":"Ngalimemezela ibizo lakho, Oh Thixo,"},{"book":"Izililo","chapter":"3","verse":"56","text":"Wezwa ukuncenga kwami: “Ungavali indlebe zakho"},{"book":"Izililo","chapter":"3","verse":"57","text":"Wasondela lapho ngikumemeza,"},{"book":"Izililo","chapter":"3","verse":"58","text":"Oh Thixo, wasamukela isikhalazo sami;"},{"book":"Izililo","chapter":"3","verse":"59","text":"Ububonile Thixo, ububi obenziwe kimi."},{"book":"Izililo","chapter":"3","verse":"60","text":"Usubonile ukujula kokusonga kwabo,"},{"book":"Izililo","chapter":"3","verse":"61","text":"Awu Thixo, uzwile inhlamba zabo,"},{"book":"Izililo","chapter":"3","verse":"62","text":"ukunyenyeza lokungunguna kwabo ngami"},{"book":"Izililo","chapter":"3","verse":"63","text":"Ake ubabone! Bahlezi kumbe bajamile,"},{"book":"Izililo","chapter":"3","verse":"64","text":"Awu Thixo, akubaphindisele ngokubafaneleyo,"},{"book":"Izililo","chapter":"3","verse":"65","text":"Basibekele ngelembu ezinhliziyweni zabo,"},{"book":"Izililo","chapter":"3","verse":"66","text":"Xhumana labo ngolaka, ubabhubhise"}]}