{"data":[{"book":"UmTshumayeli","chapter":"7","verse":"1","text":"Ibizo elihle lingcono kulamakha amnandi,"},{"book":"UmTshumayeli","chapter":"7","verse":"2","text":"Kungcono ukuya endlini yesililo"},{"book":"UmTshumayeli","chapter":"7","verse":"3","text":"Usizi lungcono kulokuhleka,"},{"book":"UmTshumayeli","chapter":"7","verse":"4","text":"Inhliziyo yabahlakaniphileyo isendlini yokulila,"},{"book":"UmTshumayeli","chapter":"7","verse":"5","text":"Kungcono ukulalela izixwayiso zomuntu ohlakaniphileyo"},{"book":"UmTshumayeli","chapter":"7","verse":"6","text":"Njengokuchachamba kwameva ngaphansi kwembiza,"},{"book":"UmTshumayeli","chapter":"7","verse":"7","text":"Ukuqilibezela kwenza ohlakaniphileyo abe yisiwula,"},{"book":"UmTshumayeli","chapter":"7","verse":"8","text":"Isiphetho sendaba singcono kulokuqala kwayo,"},{"book":"UmTshumayeli","chapter":"7","verse":"9","text":"Ungaphangisi ukufuthelana ngaphakathi,"},{"book":"UmTshumayeli","chapter":"7","verse":"10","text":"Ungaze wathi, “Kungani insuku zayizolo zazingcono kulalezi?”"},{"book":"UmTshumayeli","chapter":"7","verse":"11","text":"Ukuhlakanipha, njengelifa, kuyinto enhle"},{"book":"UmTshumayeli","chapter":"7","verse":"12","text":"Ukuhlakanipha kuyisiphephelo"},{"book":"UmTshumayeli","chapter":"7","verse":"13","text":"Nakana ngalokho uNkulunkulu akwenzayo:"},{"book":"UmTshumayeli","chapter":"7","verse":"14","text":"Ngezikhathi konke kukuhle, thokoza;"},{"book":"UmTshumayeli","chapter":"7","verse":"15","text":"Kuyonale impilo yami eyize sengizibonile izinto lezi zombili:"},{"book":"UmTshumayeli","chapter":"7","verse":"16","text":"Ungalungi wedlulise,"},{"book":"UmTshumayeli","chapter":"7","verse":"17","text":"Ungaxhwali okudlulisileyo,"},{"book":"UmTshumayeli","chapter":"7","verse":"18","text":"Kuhle ukuthi uthi ubambe lokhu"},{"book":"UmTshumayeli","chapter":"7","verse":"19","text":"Ukuhlakanipha kwenza umuntu ohlakaniphileyo oyedwa abe lamandla"},{"book":"UmTshumayeli","chapter":"7","verse":"20","text":"Akulamuntu loyedwa olungileyo emhlabeni"},{"book":"UmTshumayeli","chapter":"7","verse":"21","text":"Ungaphiki ngokulalela wonke amazwi akhulunywa ngabantu,"},{"book":"UmTshumayeli","chapter":"7","verse":"22","text":"ngoba uyakwazi enhliziyweni yakho"},{"book":"UmTshumayeli","chapter":"7","verse":"23","text":"Konke lokhu ngakuhlolisisa ngokuhlakanipha ngathi,"},{"book":"UmTshumayeli","chapter":"7","verse":"24","text":"Ukuhlakanipha okungabe kukhona,"},{"book":"UmTshumayeli","chapter":"7","verse":"25","text":"Ngasengibeka ingqondo yami ukuthi ngizwisise,"},{"book":"UmTshumayeli","chapter":"7","verse":"26","text":"Ngibona ukuthi uyingozi eyedlula ukufa"},{"book":"UmTshumayeli","chapter":"7","verse":"27","text":"Uthi uMtshumayeli, “Khangela, nanku esengikunanzelele:"},{"book":"UmTshumayeli","chapter":"7","verse":"28","text":"ngilokhu ngisachwayisisa"},{"book":"UmTshumayeli","chapter":"7","verse":"29","text":"Yilokhu kuphela esengikufumene:"}]}