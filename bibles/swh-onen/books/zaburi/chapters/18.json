{"data":[{"book":"Zaburi","chapter":"18","verse":"1","text":"Nakupenda wewe, Ee Bwana,"},{"book":"Zaburi","chapter":"18","verse":"2","text":"Bwana ni mwamba wangu,"},{"book":"Zaburi","chapter":"18","verse":"3","text":"Ninamwita Bwana anayestahili kusifiwa,"},{"book":"Zaburi","chapter":"18","verse":"4","text":"Kamba za mauti zilinizunguka,"},{"book":"Zaburi","chapter":"18","verse":"5","text":"Kamba za kuzimu zilinizunguka,"},{"book":"Zaburi","chapter":"18","verse":"6","text":"Katika shida yangu nalimwita Bwana,"},{"book":"Zaburi","chapter":"18","verse":"7","text":"Dunia ilitetemeka na kutikisika,"},{"book":"Zaburi","chapter":"18","verse":"8","text":"Moshi ukapanda kutoka puani mwake,"},{"book":"Zaburi","chapter":"18","verse":"9","text":"Akazipasua mbingu akashuka chini,"},{"book":"Zaburi","chapter":"18","verse":"10","text":"Alipanda juu ya kerubi akaruka,"},{"book":"Zaburi","chapter":"18","verse":"11","text":"Alifanya giza kuwa kitu chake cha kujifunika,"},{"book":"Zaburi","chapter":"18","verse":"12","text":"Kutokana na mwanga wa uwepo wake"},{"book":"Zaburi","chapter":"18","verse":"13","text":"Bwana alinguruma kutoka mbinguni,"},{"book":"Zaburi","chapter":"18","verse":"14","text":"Aliipiga mishale yake na kutawanya adui,"},{"book":"Zaburi","chapter":"18","verse":"15","text":"Mabonde ya bahari yalifunuliwa,"},{"book":"Zaburi","chapter":"18","verse":"16","text":"Alinyoosha mkono kutoka juu na kunishika;"},{"book":"Zaburi","chapter":"18","verse":"17","text":"Aliniokoa kutoka adui wangu mwenye nguvu nyingi,"},{"book":"Zaburi","chapter":"18","verse":"18","text":"Walinikabili siku ya msiba wangu,"},{"book":"Zaburi","chapter":"18","verse":"19","text":"Alinileta nje mahali penye nafasi tele,"},{"book":"Zaburi","chapter":"18","verse":"20","text":"Bwana alinitendea sawasawa na uadilifu wangu;"},{"book":"Zaburi","chapter":"18","verse":"21","text":"Kwa maana nimezishika njia za Bwana;"},{"book":"Zaburi","chapter":"18","verse":"22","text":"Sheria zake zote zi mbele yangu,"},{"book":"Zaburi","chapter":"18","verse":"23","text":"Nimekuwa sina hatia mbele zake,"},{"book":"Zaburi","chapter":"18","verse":"24","text":"Bwana amenilipa sawasawa na uadilifu wangu;"},{"book":"Zaburi","chapter":"18","verse":"25","text":"Kwa yeye aliye mwaminifu, unajionyesha kuwa mwaminifu,"},{"book":"Zaburi","chapter":"18","verse":"26","text":"Kwa aliye mtakatifu, unajionyesha kuwa mtakatifu,"},{"book":"Zaburi","chapter":"18","verse":"27","text":"Wewe huwaokoa wanyenyekevu,"},{"book":"Zaburi","chapter":"18","verse":"28","text":"Wewe, Ee Bwana, unaifanya taa yangu iendelee kuwaka;"},{"book":"Zaburi","chapter":"18","verse":"29","text":"Kwa msaada wako naweza kushinda jeshi,"},{"book":"Zaburi","chapter":"18","verse":"30","text":"Kuhusu Mungu, njia yake ni kamilifu,"},{"book":"Zaburi","chapter":"18","verse":"31","text":"Kwa maana ni nani aliye Mungu"},{"book":"Zaburi","chapter":"18","verse":"32","text":"Mungu ndiye anivikaye nguvu"},{"book":"Zaburi","chapter":"18","verse":"33","text":"Huifanya miguu yangu kama miguu ya kulungu,"},{"book":"Zaburi","chapter":"18","verse":"34","text":"Huifundisha mikono yangu kupigana vita;"},{"book":"Zaburi","chapter":"18","verse":"35","text":"Hunipa ngao yako ya ushindi,"},{"book":"Zaburi","chapter":"18","verse":"36","text":"Huyapanua mapito yangu,"},{"book":"Zaburi","chapter":"18","verse":"37","text":"Niliwafuatia adui zangu na nikawapata,"},{"book":"Zaburi","chapter":"18","verse":"38","text":"Niliwaseta hata hawakuweza kuinuka tena;"},{"book":"Zaburi","chapter":"18","verse":"39","text":"Ulinivika nguvu kwa ajili ya kupigana vita;"},{"book":"Zaburi","chapter":"18","verse":"40","text":"Uliwafanya adui zangu wageuke na kukimbia,"},{"book":"Zaburi","chapter":"18","verse":"41","text":"Walipiga yowe, lakini hapakuwepo na yeyote wa kuwaokoa;"},{"book":"Zaburi","chapter":"18","verse":"42","text":"Niliwaponda kama mavumbi yanayopeperushwa na upepo;"},{"book":"Zaburi","chapter":"18","verse":"43","text":"Umeniokoa kutokana na mashambulizi ya watu;"},{"book":"Zaburi","chapter":"18","verse":"44","text":"Mara wanisikiapo hunitii,"},{"book":"Zaburi","chapter":"18","verse":"45","text":"Wote wanalegea,"},{"book":"Zaburi","chapter":"18","verse":"46","text":"Bwana yu hai! Sifa ni kwa Mwamba wangu!"},{"book":"Zaburi","chapter":"18","verse":"47","text":"Yeye ndiye Mungu anilipiziaye kisasi,"},{"book":"Zaburi","chapter":"18","verse":"48","text":"aniokoaye na adui zangu."},{"book":"Zaburi","chapter":"18","verse":"49","text":"Kwa hiyo nitakusifu katikati ya mataifa, Ee Bwana;"},{"book":"Zaburi","chapter":"18","verse":"50","text":"Humpa mfalme wake ushindi mkuu,"}]}