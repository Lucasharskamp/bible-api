{"data":[{"book":"Izaga","chapter":"24","verse":"1","text":"Ungabahawukeli abantu abaxhwalileyo,"},{"book":"Izaga","chapter":"24","verse":"2","text":"ngoba ezingqondweni zabo bahlose udlakela,"},{"book":"Izaga","chapter":"24","verse":"3","text":"Indlu yakhiwa ngokuhlakanipha,"},{"book":"Izaga","chapter":"24","verse":"4","text":"amakamelo ayo agcwaliswe ngolwazi,"},{"book":"Izaga","chapter":"24","verse":"5","text":"Umuntu ohlakaniphileyo ulamandla amakhulu,"},{"book":"Izaga","chapter":"24","verse":"6","text":"ukuthi unqobe empini kufunakala izeluleko,"},{"book":"Izaga","chapter":"24","verse":"7","text":"Ukuhlakanipha kuphakeme kakhulu koyisiwula;"},{"book":"Izaga","chapter":"24","verse":"8","text":"Lowo oceba ububi"},{"book":"Izaga","chapter":"24","verse":"9","text":"Amacebo obuwula ayisono,"},{"book":"Izaga","chapter":"24","verse":"10","text":"Nxa uthikaza ngezikhathi zenhlupheko,"},{"book":"Izaga","chapter":"24","verse":"11","text":"Bahlangule labo abaholelwa ekufeni;"},{"book":"Izaga","chapter":"24","verse":"12","text":"Nxa usithi, “Angithi besingazi lutho ngalokhu,”"},{"book":"Izaga","chapter":"24","verse":"13","text":"Dlana uluju ndodana yami, ngoba lulungile;"},{"book":"Izaga","chapter":"24","verse":"14","text":"Yazi njalo ukuthi ukuhlakanipha kumnandi emphefumulweni wakho,"},{"book":"Izaga","chapter":"24","verse":"15","text":"Ungacathameli indlu yomuntu olungileyo njengesigebenga,"},{"book":"Izaga","chapter":"24","verse":"16","text":"ngoba loba angaze awe kasikhombisa umuntu olungileyo uyavuka futhi,"},{"book":"Izaga","chapter":"24","verse":"17","text":"Ungathatshiswa yikuwa kwesitha sakho;"},{"book":"Izaga","chapter":"24","verse":"18","text":"ngoba uThixo uzakubona lokho"},{"book":"Izaga","chapter":"24","verse":"19","text":"Ungazikhathazi ngenxa yabantu ababi"},{"book":"Izaga","chapter":"24","verse":"20","text":"ngoba umuntu omubi akalalo ithemba lakusasa,"},{"book":"Izaga","chapter":"24","verse":"21","text":"Yesaba uThixo lombusi, ndodana yami,"},{"book":"Izaga","chapter":"24","verse":"22","text":"ngoba laba bobabili bazakwehlisa ulaka lubabhubhise,"},{"book":"Izaga","chapter":"24","verse":"23","text":"La ngamanye amazwi ezihlakaniphi:"},{"book":"Izaga","chapter":"24","verse":"24","text":"Loba ngubani othi kolecala, “Umsulwa,”"},{"book":"Izaga","chapter":"24","verse":"25","text":"Kodwa kuzabalungela labo abamlahlayo olecala,"},{"book":"Izaga","chapter":"24","verse":"26","text":"Impendulo eqotho"},{"book":"Izaga","chapter":"24","verse":"27","text":"Qeda umsebenzi wakho waphandle"},{"book":"Izaga","chapter":"24","verse":"28","text":"Ungafakazi ngokubethela umakhelwane kungelamlandu,"},{"book":"Izaga","chapter":"24","verse":"29","text":"Ungabokuthi, “Ngizakwenza kuye njengoba enze kimi;"},{"book":"Izaga","chapter":"24","verse":"30","text":"Ngedlula ensimini yevilavoxo,"},{"book":"Izaga","chapter":"24","verse":"31","text":"ameva ayesekhula indawo yonke,"},{"book":"Izaga","chapter":"24","verse":"32","text":"Ngakunanzelela konke engangikubona"},{"book":"Izaga","chapter":"24","verse":"33","text":"Ukulala okuncane, ukuwozela okuncane,"},{"book":"Izaga","chapter":"24","verse":"34","text":"ubuyanga buzafika kuwe njengesela"}]}