{"data":[{"book":"Yeremiya","chapter":"48","verse":"1","text":"Ponena za Mowabu:"},{"book":"Yeremiya","chapter":"48","verse":"2","text":"Palibenso amene akutamanda Mowabu;"},{"book":"Yeremiya","chapter":"48","verse":"3","text":"Tamvani mfuwu wa anthu a ku Horonaimu."},{"book":"Yeremiya","chapter":"48","verse":"4","text":"Mowabu wawonongeka;"},{"book":"Yeremiya","chapter":"48","verse":"5","text":"Anthu akukwera chikweza cha ku Luhiti,"},{"book":"Yeremiya","chapter":"48","verse":"6","text":"Thawani! Dzipulumutseni;"},{"book":"Yeremiya","chapter":"48","verse":"7","text":"Popeza inu munkadalira ntchito zanu ndi chuma chanu,"},{"book":"Yeremiya","chapter":"48","verse":"8","text":"Wowononga adzabwera ndi kusakaza mzinda uliwonse,"},{"book":"Yeremiya","chapter":"48","verse":"9","text":"Mtsineni khutu Mowabu"},{"book":"Yeremiya","chapter":"48","verse":"10","text":"“Wotembereredwa munthu amene amagwira ntchito ya Yehova monyinyirika!"},{"book":"Yeremiya","chapter":"48","verse":"11","text":"“Mowabu wakhala pa mtendere kuyambira ubwana wake,"},{"book":"Yeremiya","chapter":"48","verse":"12","text":"Nʼchifukwa chake masiku akubwera,”"},{"book":"Yeremiya","chapter":"48","verse":"13","text":"Pamenepo Mowabu adzachita manyazi ndi Kemosi,"},{"book":"Yeremiya","chapter":"48","verse":"14","text":"“Kodi munganene bwanji kuti, ‘Ife ndife asilikali."},{"book":"Yeremiya","chapter":"48","verse":"15","text":"Owononga Mowabu ndi mizinda yake abwera ndipo ankhondo adzalowa mʼmidzi yake;"},{"book":"Yeremiya","chapter":"48","verse":"16","text":"Kugwa kwa Mowabu kuli pafupi;"},{"book":"Yeremiya","chapter":"48","verse":"17","text":"Mulireni kwambiri, inu nonse amene mwamuzungulira,"},{"book":"Yeremiya","chapter":"48","verse":"18","text":"“Tsikani pa ulemerero wanu"},{"book":"Yeremiya","chapter":"48","verse":"19","text":"Inu amene mumakhala ku Aroeri,"},{"book":"Yeremiya","chapter":"48","verse":"20","text":"Iwo adzayankha kuti, “Mowabu wachititsidwa manyazi, pakuti wasakazika."},{"book":"Yeremiya","chapter":"48","verse":"21","text":"Chiweruzo chabwera ku mizinda ya ku mapiri,"},{"book":"Yeremiya","chapter":"48","verse":"22","text":"Diboni, Nebo, Beti-Dibilataimu,"},{"book":"Yeremiya","chapter":"48","verse":"23","text":"Kiriyataimu, Beti-Gamuli, Beti-Meoni,"},{"book":"Yeremiya","chapter":"48","verse":"24","text":"Keriyoti ndi Bozira"},{"book":"Yeremiya","chapter":"48","verse":"25","text":"Mphamvu za Mowabu zawonongeka;"},{"book":"Yeremiya","chapter":"48","verse":"26","text":"“Muledzeretseni Mowabu,"},{"book":"Yeremiya","chapter":"48","verse":"27","text":"Kodi suja Israeli anali kwa iwe ngati chinthu chomachiseka?"},{"book":"Yeremiya","chapter":"48","verse":"28","text":"Inu amene mumakhala ku Mowabu,"},{"book":"Yeremiya","chapter":"48","verse":"29","text":"“Tamva za kunyada kwa Mowabu,"},{"book":"Yeremiya","chapter":"48","verse":"30","text":"Ine ndikuzidziwa ntchito zake,"},{"book":"Yeremiya","chapter":"48","verse":"31","text":"Nʼchifukwa chake ndidzamulira Mowabu,"},{"book":"Yeremiya","chapter":"48","verse":"32","text":"Ndikukhetsa misozi chifukwa cha inu, kupambana momwe ndinalirira Yazeri."},{"book":"Yeremiya","chapter":"48","verse":"33","text":"Chimwemwe ndi chisangalalo zatha"},{"book":"Yeremiya","chapter":"48","verse":"34","text":"“A ku Hesiboni ndi Eleali akulira"},{"book":"Yeremiya","chapter":"48","verse":"35","text":"Ndidzawaletsa anthu a ku Mowabu"},{"book":"Yeremiya","chapter":"48","verse":"36","text":"“Nʼchifukwa chake mtima wanga ukulirira Mowabu ngati chitoliro."},{"book":"Yeremiya","chapter":"48","verse":"37","text":"Aliyense wameta mutu wake"},{"book":"Yeremiya","chapter":"48","verse":"38","text":"Pa madenga onse a ku Mowabu"},{"book":"Yeremiya","chapter":"48","verse":"39","text":"“Taonani mmene waphwanyikira! Tamvani momwe akulirira!"},{"book":"Yeremiya","chapter":"48","verse":"40","text":"Yehova akuti,"},{"book":"Yeremiya","chapter":"48","verse":"41","text":"Mizinda idzagwidwa"},{"book":"Yeremiya","chapter":"48","verse":"42","text":"Mowabu sudzakhala mtundu wa anthu"},{"book":"Yeremiya","chapter":"48","verse":"43","text":"Zoopsa, dzenje ndi msampha zikudikira"},{"book":"Yeremiya","chapter":"48","verse":"44","text":"“Aliyense wothawa zoopsa"},{"book":"Yeremiya","chapter":"48","verse":"45","text":"“Anthu othawa nkhondo ayima pa mthunzi wa Hesiboni"},{"book":"Yeremiya","chapter":"48","verse":"46","text":"Tsoka kwa iwe Mowabu!"},{"book":"Yeremiya","chapter":"48","verse":"47","text":"“Komabe masiku akutsogolo"}]}