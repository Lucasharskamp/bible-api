{"data":[{"book":"UJeremiya","chapter":"50","verse":"1","text":"Leli yilizwi uThixo alikhuluma ngoJeremiya umphrofethi mayelana leBhabhiloni lelizwe lamaKhaladiya:"},{"book":"UJeremiya","chapter":"50","verse":"2","text":"“Memezelani libike phakathi kwezizwe,"},{"book":"UJeremiya","chapter":"50","verse":"3","text":"Isizwe esivela enyakatho sizayihlasela"},{"book":"UJeremiya","chapter":"50","verse":"4","text":"Ngalezonsuku, ngalesosikhathi,"},{"book":"UJeremiya","chapter":"50","verse":"5","text":"Bazabuza indlela eya eZiyoni"},{"book":"UJeremiya","chapter":"50","verse":"6","text":"Abantu bami bebeyizimvu ezilahlekileyo,"},{"book":"UJeremiya","chapter":"50","verse":"7","text":"Loba ngubani owabatholayo wabadla;"},{"book":"UJeremiya","chapter":"50","verse":"8","text":"Balekelani ngaphandle kweBhabhiloni;"},{"book":"UJeremiya","chapter":"50","verse":"9","text":"Ngoba iBhabhiloni ngizayivusela"},{"book":"UJeremiya","chapter":"50","verse":"10","text":"Ngakho iBhabhiloni izaphangwa,"},{"book":"UJeremiya","chapter":"50","verse":"11","text":"“Njengoba lithokoza njalo lithabile,"},{"book":"UJeremiya","chapter":"50","verse":"12","text":"unyoko uzayangeka kakhulu,"},{"book":"UJeremiya","chapter":"50","verse":"13","text":"Ngenxa yolaka lukaThixo kayiyikuhlalwa muntu kodwa"},{"book":"UJeremiya","chapter":"50","verse":"14","text":"Vivani inhlangothi zonke zeBhabhiloni"},{"book":"UJeremiya","chapter":"50","verse":"15","text":"Klabalalani kuyo ezinhlangothini zonke!"},{"book":"UJeremiya","chapter":"50","verse":"16","text":"Msuseni eBhabhiloni umhlanyeli,"},{"book":"UJeremiya","chapter":"50","verse":"17","text":"U-Israyeli ungumhlambi ohlakazekileyo"},{"book":"UJeremiya","chapter":"50","verse":"18","text":"Ngakho uThixo uSomandla, uNkulunkulu ka-Israyeli uthi:"},{"book":"UJeremiya","chapter":"50","verse":"19","text":"Kodwa u-Israyeli ngizambuyisela edlelweni lakhe,"},{"book":"UJeremiya","chapter":"50","verse":"20","text":"Ngalezonsuku, ngalesosikhathi,” kutsho uThixo,"},{"book":"UJeremiya","chapter":"50","verse":"21","text":"Hlaselani ilizwe laseMerathayimi"},{"book":"UJeremiya","chapter":"50","verse":"22","text":"Umsindo wempi uselizweni,"},{"book":"UJeremiya","chapter":"50","verse":"23","text":"Yeka ukwephuka lokucezuka"},{"book":"UJeremiya","chapter":"50","verse":"24","text":"Ngakuthiya ngomjibila, wena Bhabhiloni,"},{"book":"UJeremiya","chapter":"50","verse":"25","text":"UThixo usevule indlu yakhe yezikhali"},{"book":"UJeremiya","chapter":"50","verse":"26","text":"Wozani kuyo limelane layo livela kude."},{"book":"UJeremiya","chapter":"50","verse":"27","text":"Bulalani zonke inkunzi zayo ezisesengamaguqa;"},{"book":"UJeremiya","chapter":"50","verse":"28","text":"Lalelani ababalekayo labaphephileyo abavela eBhabhiloni"},{"book":"UJeremiya","chapter":"50","verse":"29","text":"Bizani abemitshoko bahlasele iBhabhiloni,"},{"book":"UJeremiya","chapter":"50","verse":"30","text":"Ngakho izinsizwa zayo zizakuwa emigwaqweni; ngalolosuku"},{"book":"UJeremiya","chapter":"50","verse":"31","text":"“Khangela, ngimelane lawe, wena oyisiqholo,”"},{"book":"UJeremiya","chapter":"50","verse":"32","text":"Oyisiqholo uzakhubeka awe,"},{"book":"UJeremiya","chapter":"50","verse":"33","text":"UThixo uSomandla uthi:"},{"book":"UJeremiya","chapter":"50","verse":"34","text":"Kodwa uMhlengi wabo ulamandla;"},{"book":"UJeremiya","chapter":"50","verse":"35","text":"Inkemba imelana lamaKhaladiya,”"},{"book":"UJeremiya","chapter":"50","verse":"36","text":"Inkemba izamelana labaphrofethi balo bamanga!"},{"book":"UJeremiya","chapter":"50","verse":"37","text":"Inkemba izamelana lamabhiza ayo lezinqola zempi"},{"book":"UJeremiya","chapter":"50","verse":"38","text":"Kuzakuba lokoma kwamanzi ayo!"},{"book":"UJeremiya","chapter":"50","verse":"39","text":"Ngakho izidalwa zasenkangala lezimpisi zizahlala khona,"},{"book":"UJeremiya","chapter":"50","verse":"40","text":"Njengalokhu uNkulunkulu wachitha iSodoma leGomora"},{"book":"UJeremiya","chapter":"50","verse":"41","text":"Khangelani! Ibutho liyeza livela enyakatho;"},{"book":"UJeremiya","chapter":"50","verse":"42","text":"Bahlome ngamadandili langemikhonto;"},{"book":"UJeremiya","chapter":"50","verse":"43","text":"INkosi yaseBhabhiloni isiyizwile imibiko ngabo,"},{"book":"UJeremiya","chapter":"50","verse":"44","text":"Njengesilwane siphuma emahlathini aseJodani sisiya"},{"book":"UJeremiya","chapter":"50","verse":"45","text":"Ngakho, zwanini lokho uThixo asecebe ukukwenza ngeBhabhiloni,"},{"book":"UJeremiya","chapter":"50","verse":"46","text":"Ekuzwakaleni komsindo wokuthunjwa kweBhabhiloni umhlaba uzagedezela;"}]}