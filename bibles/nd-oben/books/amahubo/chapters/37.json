{"data":[{"book":"AmaHubo","chapter":"37","verse":"1","text":"Ungazikhathazi ngabantu ababi"},{"book":"AmaHubo","chapter":"37","verse":"2","text":"ngoba bazabuna masinyane njengotshani,"},{"book":"AmaHubo","chapter":"37","verse":"3","text":"Themba kuThixo wenze okulungileyo;"},{"book":"AmaHubo","chapter":"37","verse":"4","text":"Zithokozise kuThixo"},{"book":"AmaHubo","chapter":"37","verse":"5","text":"Nikela indlela zakho kuThixo;"},{"book":"AmaHubo","chapter":"37","verse":"6","text":"Uzakwenza ukulunga kwakho kukhazimule njengentathakusa,"},{"book":"AmaHubo","chapter":"37","verse":"7","text":"Chuma phambi kukaThixo"},{"book":"AmaHubo","chapter":"37","verse":"8","text":"Xwayana lokuzonda njalo ufulathele intukuthelo;"},{"book":"AmaHubo","chapter":"37","verse":"9","text":"Ngoba abantu ababi bazasuswa,"},{"book":"AmaHubo","chapter":"37","verse":"10","text":"Kuseyisikhatshana nje, ababi bazabe bengasekho;"},{"book":"AmaHubo","chapter":"37","verse":"11","text":"Kodwa abathobekileyo bazakudla ilifa lelizwe"},{"book":"AmaHubo","chapter":"37","verse":"12","text":"Ababi baceba ukulimaza abalungileyo"},{"book":"AmaHubo","chapter":"37","verse":"13","text":"kodwa iNkosi iyabahleka ababi,"},{"book":"AmaHubo","chapter":"37","verse":"14","text":"Ababi bakhokha inkemba,"},{"book":"AmaHubo","chapter":"37","verse":"15","text":"Kodwa izinkemba zabo zizagwaza ezabo inhliziyo,"},{"book":"AmaHubo","chapter":"37","verse":"16","text":"Kungcono ingcosana leyo abalayo abalungileyo"},{"book":"AmaHubo","chapter":"37","verse":"17","text":"ngoba amandla ababi azaqedwa,"},{"book":"AmaHubo","chapter":"37","verse":"18","text":"Insuku zabangelasici ziyaziwa nguThixo,"},{"book":"AmaHubo","chapter":"37","verse":"19","text":"Ngezikhathi zomonakalo abayikubuna;"},{"book":"AmaHubo","chapter":"37","verse":"20","text":"Kodwa ababi bazabhubha;"},{"book":"AmaHubo","chapter":"37","verse":"21","text":"Ababi bayaboleka kodwa kababuyiseli,"},{"book":"AmaHubo","chapter":"37","verse":"22","text":"labo uThixo ababusisayo bazakudla ilifa lelizwe;"},{"book":"AmaHubo","chapter":"37","verse":"23","text":"Nxa uThixo ethokoziswa yikuhamba komuntu,"},{"book":"AmaHubo","chapter":"37","verse":"24","text":"loba angakhubeka, kayikuwa,"},{"book":"AmaHubo","chapter":"37","verse":"25","text":"Ngangimutsha, manje sengiluphele,"},{"book":"AmaHubo","chapter":"37","verse":"26","text":"Bayaphana kokuphela njalo bayebolekana nje;"},{"book":"AmaHubo","chapter":"37","verse":"27","text":"Phendukani ebubini lenze ukulunga"},{"book":"AmaHubo","chapter":"37","verse":"28","text":"Ngoba uThixo uthanda abalungileyo"},{"book":"AmaHubo","chapter":"37","verse":"29","text":"abalungileyo bazazuza ilifa lelizwe"},{"book":"AmaHubo","chapter":"37","verse":"30","text":"Umlomo womuntu olungileyo ukhuluma ukuhlakanipha,"},{"book":"AmaHubo","chapter":"37","verse":"31","text":"Umthetho kaNkulunkulu wakhe usenhliziyweni yakhe;"},{"book":"AmaHubo","chapter":"37","verse":"32","text":"Ababi bacathamela abalungileyo"},{"book":"AmaHubo","chapter":"37","verse":"33","text":"kodwa uThixo kayikubayekela bazenzele abakuthandayo"},{"book":"AmaHubo","chapter":"37","verse":"34","text":"Lindelani uThixo ligcine indlela yakhe."},{"book":"AmaHubo","chapter":"37","verse":"35","text":"Sengike ngabona umuntu omubi olesihluku"},{"book":"AmaHubo","chapter":"37","verse":"36","text":"kodwa waphanga wafa kabe esabakhona;"},{"book":"AmaHubo","chapter":"37","verse":"37","text":"Nanzelela abangelecala, qaphela abaqotho."},{"book":"AmaHubo","chapter":"37","verse":"38","text":"Kodwa zonke izoni zizabhujiswa;"},{"book":"AmaHubo","chapter":"37","verse":"39","text":"Ukusindiswa kwabalungileyo kuvela kuThixo;"},{"book":"AmaHubo","chapter":"37","verse":"40","text":"UThixo uyabasiza abakhulule;"}]}