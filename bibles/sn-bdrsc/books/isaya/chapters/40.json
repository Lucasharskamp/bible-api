{"data":[{"book":"Isaya","chapter":"40","verse":"1","text":"Nyaradzai, nyaradzai vanhu vangu,"},{"book":"Isaya","chapter":"40","verse":"2","text":"Taurai nounyoro kuJerusarema,"},{"book":"Isaya","chapter":"40","verse":"3","text":"Inzwi rounodanidzira achiti,"},{"book":"Isaya","chapter":"40","verse":"4","text":"Mipata yose ichasimudzirwa,"},{"book":"Isaya","chapter":"40","verse":"5","text":"Uye kubwinya kwaJehovha kucharatidzwa,"},{"book":"Isaya","chapter":"40","verse":"6","text":"Inzwi rinoti, “Danidzirai.”"},{"book":"Isaya","chapter":"40","verse":"7","text":"Uswa hunooma uye maruva anowa,"},{"book":"Isaya","chapter":"40","verse":"8","text":"Uswa hunooma uye maruva anowa,"},{"book":"Isaya","chapter":"40","verse":"9","text":"Imi munoparidzira Zioni zvinhu zvakanaka,"},{"book":"Isaya","chapter":"40","verse":"10","text":"Tarirai, Ishe Jehovha ari kuuya nesimba,"},{"book":"Isaya","chapter":"40","verse":"11","text":"Anofudza makwai ake somufudzi:"},{"book":"Isaya","chapter":"40","verse":"12","text":"Ndianiko akayera mvura zhinji muchanza chake,"},{"book":"Isaya","chapter":"40","verse":"13","text":"Ndiani akanzwisisa murangariro waJehovha,"},{"book":"Isaya","chapter":"40","verse":"14","text":"Ndiani akabvunzwa naJehovha kuti amujekesere,"},{"book":"Isaya","chapter":"40","verse":"15","text":"Zvirokwazvo ndudzi dzavanhu dzakaita sedonhwe remvura riri muchirongo;"},{"book":"Isaya","chapter":"40","verse":"16","text":"Rebhanoni harina huni dzinoringana kuvesa moto wearitari,"},{"book":"Isaya","chapter":"40","verse":"17","text":"Ndudzi dzose dzakaita sepasina chinhu pamberi pake;"},{"book":"Isaya","chapter":"40","verse":"18","text":"Zvino, mungafananidza Mwari naaniko?"},{"book":"Isaya","chapter":"40","verse":"19","text":"Kana chiri chifananidzo, muumbi anochiumba,"},{"book":"Isaya","chapter":"40","verse":"20","text":"Murombo anoshayiwa chipo"},{"book":"Isaya","chapter":"40","verse":"21","text":"Hamuzivi here?"},{"book":"Isaya","chapter":"40","verse":"22","text":"Anogara samambo pamusoro pedenderedzwa renyika,"},{"book":"Isaya","chapter":"40","verse":"23","text":"Anoita kuti machinda ave pasina,"},{"book":"Isaya","chapter":"40","verse":"24","text":"Vachangosimwa, vachangodyarwa,"},{"book":"Isaya","chapter":"40","verse":"25","text":"“Mungandienzanisa naaniko?"},{"book":"Isaya","chapter":"40","verse":"26","text":"Simudzai meso enyu mutarire kumatenga."},{"book":"Isaya","chapter":"40","verse":"27","text":"Unoreveiko, iwe Jakobho,"},{"book":"Isaya","chapter":"40","verse":"28","text":"Hauzivi here?"},{"book":"Isaya","chapter":"40","verse":"29","text":"Anopa simba kuna vakarukutika,"},{"book":"Isaya","chapter":"40","verse":"30","text":"Kunyange majaya anoneta uye anorukutika,"},{"book":"Isaya","chapter":"40","verse":"31","text":"asi avo vane tariro muna Jehovha"}]}