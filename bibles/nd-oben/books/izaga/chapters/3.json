{"data":[{"book":"Izaga","chapter":"3","verse":"1","text":"Ndodana yami, ungakhohlwa imfundiso yami,"},{"book":"Izaga","chapter":"3","verse":"2","text":"ngoba izakwandisa impilo yakho okweminyaka eminengi,"},{"book":"Izaga","chapter":"3","verse":"3","text":"Akungasuki kuwe loba nini uthando lokuthembeka;"},{"book":"Izaga","chapter":"3","verse":"4","text":"Ngalokho uzathandeka uzuze ibizo elihle"},{"book":"Izaga","chapter":"3","verse":"5","text":"Themba kuThixo ngenhliziyo yakho yonke,"},{"book":"Izaga","chapter":"3","verse":"6","text":"mvume kuzozonke izindlela zakho,"},{"book":"Izaga","chapter":"3","verse":"7","text":"Ungazenzi ohlakaniphileyo ngokubona kwakho;"},{"book":"Izaga","chapter":"3","verse":"8","text":"Lokho kuzawuphilisa umzimba wakho"},{"book":"Izaga","chapter":"3","verse":"9","text":"Dumisa uThixo ngenotho yakho;"},{"book":"Izaga","chapter":"3","verse":"10","text":"ngalokho iziphala zakho zizagcwala ziphuphume,"},{"book":"Izaga","chapter":"3","verse":"11","text":"Ndodana yami, ungeyisi ukulaya kukaThixo"},{"book":"Izaga","chapter":"3","verse":"12","text":"ngoba uThixo ulaya labo abathandayo,"},{"book":"Izaga","chapter":"3","verse":"13","text":"Ubusisiwe umuntu ozuza ukuhlakanipha,"},{"book":"Izaga","chapter":"3","verse":"14","text":"ngoba khona kulenzuzo eyedlula isiliva"},{"book":"Izaga","chapter":"3","verse":"15","text":"Kuligugu elidlula amarubhi;"},{"book":"Izaga","chapter":"3","verse":"16","text":"Impilo ende isesandleni sakho sokunene;"},{"book":"Izaga","chapter":"3","verse":"17","text":"Izindlela zakhe zilokuthokoza,"},{"book":"Izaga","chapter":"3","verse":"18","text":"Kuyisihlahla sokuphila kulabo abakwamukelayo;"},{"book":"Izaga","chapter":"3","verse":"19","text":"Ngokuhlakanipha uThixo wabeka izisekelo zomhlaba,"},{"book":"Izaga","chapter":"3","verse":"20","text":"ngolwazi lwakhe inlwandle zehlukaniswa,"},{"book":"Izaga","chapter":"3","verse":"21","text":"Ndodana yami, gogosa ingqondo ehlela ngolwazi,"},{"book":"Izaga","chapter":"3","verse":"22","text":"kuzakuba yikuphila kuwe,"},{"book":"Izaga","chapter":"3","verse":"23","text":"Lapho-ke uzahamba ngendlela evikelweyo"},{"book":"Izaga","chapter":"3","verse":"24","text":"nxa ulala kawuyikwesaba;"},{"book":"Izaga","chapter":"3","verse":"25","text":"Ungabi lovalo nxa ujunywa ngumonakalo"},{"book":"Izaga","chapter":"3","verse":"26","text":"ngoba uThixo uzakuba lithemba lakho"},{"book":"Izaga","chapter":"3","verse":"27","text":"Ungaze wala ukusiza labo abadinga uncedo,"},{"book":"Izaga","chapter":"3","verse":"28","text":"Ungabokuthi kumakhelwane wakho:"},{"book":"Izaga","chapter":"3","verse":"29","text":"Ungacebi okubi ngomakhelwane wakho,"},{"book":"Izaga","chapter":"3","verse":"30","text":"Ungaxabani lomuntu kungelasizatho"},{"book":"Izaga","chapter":"3","verse":"31","text":"Ungamhawukeli umuntu othanda ukulwa"},{"book":"Izaga","chapter":"3","verse":"32","text":"ngoba uThixo uyamenyanya umuntu oxhwalileyo"},{"book":"Izaga","chapter":"3","verse":"33","text":"Isiqalekiso sikaThixo sehlela endlini yababi,"},{"book":"Izaga","chapter":"3","verse":"34","text":"Uyabahleka usulu abayizideleli ezizithembayo,"},{"book":"Izaga","chapter":"3","verse":"35","text":"Abahlakaniphileyo baphiwa udumo"}]}