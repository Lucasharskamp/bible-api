{"data":[{"book":"Isaya","chapter":"45","verse":"1","text":"“Zvanzi naJehovha kumuzodziwa wake,"},{"book":"Isaya","chapter":"45","verse":"2","text":"Ndichaenda mberi kwako"},{"book":"Isaya","chapter":"45","verse":"3","text":"Ndichakupa pfuma yerima,"},{"book":"Isaya","chapter":"45","verse":"4","text":"Nokuda kwaJakobho muranda wangu,"},{"book":"Isaya","chapter":"45","verse":"5","text":"Ndini Jehovha, uye hakuna mumwe;"},{"book":"Isaya","chapter":"45","verse":"6","text":"kuti kubva kumabudazuva"},{"book":"Isaya","chapter":"45","verse":"7","text":"Ndinoumba chiedza uye ndinosika rima,"},{"book":"Isaya","chapter":"45","verse":"8","text":"“Imi matenga kumusoro, nayisai kururama;"},{"book":"Isaya","chapter":"45","verse":"9","text":"“Ane nhamo uyo anokakavadzana noMuiti wake,"},{"book":"Isaya","chapter":"45","verse":"10","text":"Ane nhamo uyo anoti kuna baba vake,"},{"book":"Isaya","chapter":"45","verse":"11","text":"“Zvanzi naJehovha,"},{"book":"Isaya","chapter":"45","verse":"12","text":"Ndini ndakaita nyika"},{"book":"Isaya","chapter":"45","verse":"13","text":"Ndichamutsa Sirasi mukururama kwangu:"},{"book":"Isaya","chapter":"45","verse":"14","text":"Zvanzi naJehovha:"},{"book":"Isaya","chapter":"45","verse":"15","text":"Zvechokwadi muri Mwari anozvivanza,"},{"book":"Isaya","chapter":"45","verse":"16","text":"Vose vanoita zvifananidzo vachava nenyadzi uye vachanyadziswa,"},{"book":"Isaya","chapter":"45","verse":"17","text":"Asi Israeri achaponeswa naJehovha"},{"book":"Isaya","chapter":"45","verse":"18","text":"Nokuti zvanzi naJehovha,"},{"book":"Isaya","chapter":"45","verse":"19","text":"Handina kutaura ndiri pakavanda,"},{"book":"Isaya","chapter":"45","verse":"20","text":"“Unganai pamwe chete muuye;"},{"book":"Isaya","chapter":"45","verse":"21","text":"Paridzai zvichauya, muzvibudise pachena:"},{"book":"Isaya","chapter":"45","verse":"22","text":"“Dzokerai kwandiri mugoponeswa,"},{"book":"Isaya","chapter":"45","verse":"23","text":"Ndakapika neni pachangu,"},{"book":"Isaya","chapter":"45","verse":"24","text":"Vachati pamusoro pangu,"},{"book":"Isaya","chapter":"45","verse":"25","text":"Asi rudzi rwose rwaIsraeri"}]}