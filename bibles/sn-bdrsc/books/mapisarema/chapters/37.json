{"data":[{"book":"Mapisarema","chapter":"37","verse":"1","text":"Usava neshungu nokuda kwavanhu vakaipa,"},{"book":"Mapisarema","chapter":"37","verse":"2","text":"nokuti souswa vachaoma nokukurumidza,"},{"book":"Mapisarema","chapter":"37","verse":"3","text":"Vimba naJehovha uite zvakanaka;"},{"book":"Mapisarema","chapter":"37","verse":"4","text":"Farikana muna Jehovha,"},{"book":"Mapisarema","chapter":"37","verse":"5","text":"Isa nzira yako kuna Jehovha;"},{"book":"Mapisarema","chapter":"37","verse":"6","text":"achaita kuti kururama kwako kupenye samambakwedza,"},{"book":"Mapisarema","chapter":"37","verse":"7","text":"Nyarara pamberi paJehovha, umurindire unyerere;"},{"book":"Mapisarema","chapter":"37","verse":"8","text":"Rega kutsamwa, uzvidzore pahasha;"},{"book":"Mapisarema","chapter":"37","verse":"9","text":"Nokuti vasakarurama vachagurwa,"},{"book":"Mapisarema","chapter":"37","verse":"10","text":"Chinguva chiduku duku, vakaipa havachazovapozve;"},{"book":"Mapisarema","chapter":"37","verse":"11","text":"Asi vanyoro vachagara nhaka yenyika,"},{"book":"Mapisarema","chapter":"37","verse":"12","text":"Vakaipa vanofungira vakarurama mano akaipa,"},{"book":"Mapisarema","chapter":"37","verse":"13","text":"Asi Ishe anoseka vakaipa"},{"book":"Mapisarema","chapter":"37","verse":"14","text":"Vakaipa vanovhomora munondo"},{"book":"Mapisarema","chapter":"37","verse":"15","text":"Asi minondo yavo ichabaya mwoyo yavo pachavo,"},{"book":"Mapisarema","chapter":"37","verse":"16","text":"Zvishoma zvowakarurama zviri nani"},{"book":"Mapisarema","chapter":"37","verse":"17","text":"nokuti simba ravakaipa richavhuniwa,"},{"book":"Mapisarema","chapter":"37","verse":"18","text":"Mazuva avakarurama anozivikanwa naJehovha,"},{"book":"Mapisarema","chapter":"37","verse":"19","text":"Panguva yamatambudziko, havanganyadziswi;"},{"book":"Mapisarema","chapter":"37","verse":"20","text":"Asi vakaipa vachaparara:"},{"book":"Mapisarema","chapter":"37","verse":"21","text":"Vakaipa vanokwereta uye havadzori,"},{"book":"Mapisarema","chapter":"37","verse":"22","text":"avo vanoropafadzwa naJehovha vachagara nhaka yenyika,"},{"book":"Mapisarema","chapter":"37","verse":"23","text":"Kana Jehovha achifarira nzira yomunhu,"},{"book":"Mapisarema","chapter":"37","verse":"24","text":"kunyange akagumburwa, haangawi,"},{"book":"Mapisarema","chapter":"37","verse":"25","text":"Ndakanga ndiri muduku uye zvino ndakwegura,"},{"book":"Mapisarema","chapter":"37","verse":"26","text":"Vanogara vachingopa vamwe, uye vachikweretesa pasina muripo;"},{"book":"Mapisarema","chapter":"37","verse":"27","text":"Dzoka pane zvakaipa ugoita zvakanaka;"},{"book":"Mapisarema","chapter":"37","verse":"28","text":"Nokuti Jehovha anoda vanoruramisira"},{"book":"Mapisarema","chapter":"37","verse":"29","text":"vakarurama vachagara nhaka yenyika"},{"book":"Mapisarema","chapter":"37","verse":"30","text":"Muromo womunhu akarurama unotaura uchenjeri,"},{"book":"Mapisarema","chapter":"37","verse":"31","text":"Murayiro waMwari wake uri pamwoyo wake;"},{"book":"Mapisarema","chapter":"37","verse":"32","text":"Vakaipa vanovandira vakarurama,"},{"book":"Mapisarema","chapter":"37","verse":"33","text":"asi Jehovha haangavasiyi vari musimba ravo,"},{"book":"Mapisarema","chapter":"37","verse":"34","text":"Rindira Jehovha,"},{"book":"Mapisarema","chapter":"37","verse":"35","text":"Ndakaona munhu akaipa uye ano utsinye"},{"book":"Mapisarema","chapter":"37","verse":"36","text":"asi nokukurumidza akapfuura uye akasazovapozve;"},{"book":"Mapisarema","chapter":"37","verse":"37","text":"Cherechedza asina mhosva, ongorora akarurama;"},{"book":"Mapisarema","chapter":"37","verse":"38","text":"Asi vatadzi vose vachaparadzwa;"},{"book":"Mapisarema","chapter":"37","verse":"39","text":"Ruponeso rwavakarurama runobva kuna Jehovha;"},{"book":"Mapisarema","chapter":"37","verse":"40","text":"Jehovha anovabatsira uye anovanunura;"}]}