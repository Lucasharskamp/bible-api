{"data":[{"book":"UJeremiya","chapter":"48","verse":"1","text":"Mayelana leMowabi:"},{"book":"UJeremiya","chapter":"48","verse":"2","text":"IMowabi kayiyikudunyiswa futhi;"},{"book":"UJeremiya","chapter":"48","verse":"3","text":"Zwanini ukukhala okuvela eHoronayimi;"},{"book":"UJeremiya","chapter":"48","verse":"4","text":"IMowabi izachitheka;"},{"book":"UJeremiya","chapter":"48","verse":"5","text":"Baqansa ngendlela eya eLuhithi,"},{"book":"UJeremiya","chapter":"48","verse":"6","text":"Balekani! Gijimani lizivikele ekufeni;"},{"book":"UJeremiya","chapter":"48","verse":"7","text":"Njengoba lithembe izenzo zenu lenotho yenu,"},{"book":"UJeremiya","chapter":"48","verse":"8","text":"Umchithi uzafika emadolobheni wonke,"},{"book":"UJeremiya","chapter":"48","verse":"9","text":"Fakani itswayi kuyo iMowabi"},{"book":"UJeremiya","chapter":"48","verse":"10","text":"Yeka isithuko kulowo oyekethisayo ekwenzeni umsebenzi kaThixo!"},{"book":"UJeremiya","chapter":"48","verse":"11","text":"IMowabi ibiphumule kusukela ebutsheni bayo"},{"book":"UJeremiya","chapter":"48","verse":"12","text":"Kodwa insuku ziyeza,"},{"book":"UJeremiya","chapter":"48","verse":"13","text":"Lapho-ke iMowabi izayangeka ngoKhemoshi"},{"book":"UJeremiya","chapter":"48","verse":"14","text":"Lingatsho kanjani na ukuthi, ‘Singamabutho,"},{"book":"UJeremiya","chapter":"48","verse":"15","text":"IMowabi izachithwa, amadolobho ayo ahlaselwe;"},{"book":"UJeremiya","chapter":"48","verse":"16","text":"“Ukuwa kweMowabi sekuseduze;"},{"book":"UJeremiya","chapter":"48","verse":"17","text":"Ikhaleleni lonke lina elakhelene layo,"},{"book":"UJeremiya","chapter":"48","verse":"18","text":"Yehlani ebukhosini benu"},{"book":"UJeremiya","chapter":"48","verse":"19","text":"Manini emgwaqweni lilinde,"},{"book":"UJeremiya","chapter":"48","verse":"20","text":"IMowabi iyangekile, ngoba ichithekile."},{"book":"UJeremiya","chapter":"48","verse":"21","text":"Ukwehlulela sekufikile emagcekeni"},{"book":"UJeremiya","chapter":"48","verse":"22","text":"eDibhoni, leNebho laseBhethi-Dibhilathayimi,"},{"book":"UJeremiya","chapter":"48","verse":"23","text":"eKhiriyathayimi, leBhethi-Gamuli laseBhethi Meyoni,"},{"book":"UJeremiya","chapter":"48","verse":"24","text":"eKheriyothi kanye laseBhozira"},{"book":"UJeremiya","chapter":"48","verse":"25","text":"Uphondo lweMowabi luqunyiwe,"},{"book":"UJeremiya","chapter":"48","verse":"26","text":"“Idakiseni"},{"book":"UJeremiya","chapter":"48","verse":"27","text":"U-Israyeli wayengasinto yokuhlekisa kuwe na?"},{"book":"UJeremiya","chapter":"48","verse":"28","text":"Tshiyani amadolobho enu lihlale emadwaleni,"},{"book":"UJeremiya","chapter":"48","verse":"29","text":"Sizwile ngokuzigqaja kweMowabi,"},{"book":"UJeremiya","chapter":"48","verse":"30","text":"Ngiyakwazi ukudelela kwayo, kodwa kuyize,"},{"book":"UJeremiya","chapter":"48","verse":"31","text":"“Ngakho-ke ngiyalila ngeMowabi,"},{"book":"UJeremiya","chapter":"48","verse":"32","text":"Ngiyalikhalela njengokulila kweJazeri,"},{"book":"UJeremiya","chapter":"48","verse":"33","text":"Ukuthokoza lokuthaba akusekho"},{"book":"UJeremiya","chapter":"48","verse":"34","text":"Umsindo wokukhala kwabo uyaphakama"},{"book":"UJeremiya","chapter":"48","verse":"35","text":"EMowabi ngizabaqeda"},{"book":"UJeremiya","chapter":"48","verse":"36","text":"“Ngakho inhliziyo yami ikhalela iMowabi njengemfegwana;"},{"book":"UJeremiya","chapter":"48","verse":"37","text":"Amakhanda wonke aphuciwe"},{"book":"UJeremiya","chapter":"48","verse":"38","text":"Phezu kwezimpahla zonke zezindlu zaseMowabi"},{"book":"UJeremiya","chapter":"48","verse":"39","text":"“Yeka ukuphahlazwa kwayo! Yeka ukulila kwabo!"},{"book":"UJeremiya","chapter":"48","verse":"40","text":"UThixo uthi:"},{"book":"UJeremiya","chapter":"48","verse":"41","text":"IKheriyothi izathunjwa,"},{"book":"UJeremiya","chapter":"48","verse":"42","text":"IMowabi izachithwa ingabe isaba yisizwe"},{"book":"UJeremiya","chapter":"48","verse":"43","text":"Ukwesaba lomgodi kanye lomjibila kulilindele"},{"book":"UJeremiya","chapter":"48","verse":"44","text":"“Loba ngubani obalekela ukwesaba"},{"book":"UJeremiya","chapter":"48","verse":"45","text":"“Emthunzini waseHeshibhoni"},{"book":"UJeremiya","chapter":"48","verse":"46","text":"Maye kuwe! wena Mowabi!"},{"book":"UJeremiya","chapter":"48","verse":"47","text":"Kodwa inhlanhla ye-Mowabi ngizayibuyisela"}]}