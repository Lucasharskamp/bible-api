{"data":[{"book":"UHabhakhukhi","chapter":"2","verse":"1","text":"Ngizakuma esilindweni sami"},{"book":"UHabhakhukhi","chapter":"2","verse":"2","text":"UThixo waphendula wathi:"},{"book":"UHabhakhukhi","chapter":"2","verse":"3","text":"Ngoba isibonakaliso silindela isikhathi esimisiweyo;"},{"book":"UHabhakhukhi","chapter":"2","verse":"4","text":"Khangela, uyazigqaja;"},{"book":"UHabhakhukhi","chapter":"2","verse":"5","text":"Impela iwayini liyamkhohlisa;"},{"book":"UHabhakhukhi","chapter":"2","verse":"6","text":"Bonke kabayikumchothoza na bamhleke besithi,"},{"book":"UHabhakhukhi","chapter":"2","verse":"7","text":"Labo olezikwelede kubo kabayikukujuma na?"},{"book":"UHabhakhukhi","chapter":"2","verse":"8","text":"Ngoba sewaphanga izizwe ezinengi,"},{"book":"UHabhakhukhi","chapter":"2","verse":"9","text":"Maye kulowo obumba umbuso ngenzuzo embi"},{"book":"UHabhakhukhi","chapter":"2","verse":"10","text":"Ucebe ukubhujiswa kwabantu abanengi,"},{"book":"UHabhakhukhi","chapter":"2","verse":"11","text":"Amatshe omduli azakhala"},{"book":"UHabhakhukhi","chapter":"2","verse":"12","text":"Maye kulowo owakha idolobho ngokuchitha igazi"},{"book":"UHabhakhukhi","chapter":"2","verse":"13","text":"UThixo uSomandla kakumisanga na"},{"book":"UHabhakhukhi","chapter":"2","verse":"14","text":"Ngoba umhlaba uzagcwala ngolwazi lodumo lukaThixo,"},{"book":"UHabhakhukhi","chapter":"2","verse":"15","text":"Maye kulowo onika omakhelwane bakhe"},{"book":"UHabhakhukhi","chapter":"2","verse":"16","text":"Uzakuba lehlazo elikhulu endaweni yodumo."},{"book":"UHabhakhukhi","chapter":"2","verse":"17","text":"Udlakela olwenze eLebhanoni luzakuqeda amandla,"},{"book":"UHabhakhukhi","chapter":"2","verse":"18","text":"Silosizo bani isithombe njengoba sibazwe ngumuntu?"},{"book":"UHabhakhukhi","chapter":"2","verse":"19","text":"Maye kulowo othi esigodweni, ‘Vuka uphile!’"},{"book":"UHabhakhukhi","chapter":"2","verse":"20","text":"Kodwa uThixo usethempelini lakhe elingcwele;"}]}